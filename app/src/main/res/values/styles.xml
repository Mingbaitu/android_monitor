<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4474BB</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--定义底部弹出框的样式-->
    <style name="BottomGetpath" parent="@android:style/Theme.Dialog">
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--浮于activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--Dialog以外区域的模糊效果-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--进入以及退出动画-->
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <!--进入动画-->
    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/getpath_in</item>
        <item name="android:windowExitAnimation">@anim/getpath_out</item>
    </style>
</resources>


